  "components": {
    "schemas": {
      "createAccountResponse": {
        "required": [
          "token"
        ],
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "format": "uuid",
            "example": "d290f1ee-6c54-4b01-90e6-d701748f0851"
          },
          "username": {
            "type": "string",
            "example": "my_username"
          }
        }
      },
      "createAccountRequest": {
        "required": [
          "password",
          "username"
        ],
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "my_username"
          },
          "password": {
            "type": "string",
            "example": "my_password"
          }
        }
      },
      "foundBooks": {
        "required": [
          "items",
          "totalItems"
        ],
        "type": "object",
        "properties": {
          "totalItems": {
            "type": "integer",
            "example": 1
          },
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/itemsList"
            }
          }
        }
      },
      "itemsList": {
        "required": [
          "bookInfo"
        ],
        "type": "object",
        "properties": {
          "bookInfo": {
            "$ref": "#/components/schemas/bookInfoExample"
          },
          "bookReco": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/bookRecoExample"
            }
          }
        }
      },
      "bookRecoExample": {
        "type": "object",
        "properties": {
          "books": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/bookRecoItem"
            }
          }
        }
      },
      "bookRecoItem": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 9785124655
          },
          "title": {
            "type": "string",
            "example": "Flowers for Algernon"
          },
          "subtitle": {
            "type": "string",
            "example": "A One-act Play"
          },
          "authors": {
            "type": "array",
            "example": [
              "David Rogers",
              "Daniel Keyes"
            ],
            "items": {
              "type": "string"
            }
          },
          "publisher": {
            "type": "string",
            "example": "Dramatic Publishing"
          },
          "imageLinks": {
            "$ref": "#/components/schemas/imagesLinksItems"
          }
        }
      },
      "bookInfoExample": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 9785124655
          },
          "title": {
            "type": "string",
            "example": "Flowers for Algernon"
          },
          "subtitle": {
            "type": "string",
            "example": "A One-act Play"
          },
          "authors": {
            "type": "array",
            "example": [
              "David Rogers",
              "Daniel Keyes"
            ],
            "items": {
              "type": "string"
            }
          },
          "publisher": {
            "type": "string",
            "example": "Dramatic Publishing"
          },
          "publishedDate": {
            "type": "string",
            "example": "1969"
          },
          "industryIdentifiers": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "identifier": {
                  "type": "string"
                }
              },
              "example": [
                {
                  "type": "ISBN_10",
                  "identifier": 871293870
                },
                {
                  "type": "ISBN_13",
                  "identifier": "9780871293879"
                }
              ]
            }
          },
          "pageCount": {
            "type": "integer",
            "example": 32
          },
          "imageLinks": {
            "$ref": "#/components/schemas/imagesLinksItems"
          },
          "priceInfo": {
            "type": "object",
            "properties": {
              "price": {
                "type": "number",
                "example": 8.99
              },
              "currency": {
                "type": "string",
                "example": "EUR"
              }
            }
          }
        }
      },
      "imagesLinksItems": {
        "type": "object",
        "properties": {
          "smallThumbnail": {
            "type": "string",
            "example": "http://books.google.com/books/content?id=gK98gXR8onwC&printsec=frontcover&img=1&zoom=5&edge=curl&source=gbs_api"
          },
          "thumbnail": {
            "type": "string",
            "example": "http://books.google.com/books/content?id=gK98gXR8onwC&printsec=frontcover&img=1&zoom=1&edge=curl&source=gbs_api"
          }
        }
      },
      "statistiques": {
        "type": "object",
        "properties": {
          "fav": {
            "type": "object",
            "properties": {
              "nbItems": {
                "type": "integer",
                "example": 7
              },
              "items": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/bookRecoExample"
                }
              }
            }
          },
          "readed": {
            "type": "object",
            "properties": {
              "nbItems": {
                "type": "integer",
                "example": 12
              },
              "items": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/bookRecoExample"
                }
              }
            }
          },
          "toRead": {
            "type": "object",
            "properties": {
              "nbItems": {
                "type": "integer",
                "example": 14
              },
              "items": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/bookRecoExample"
                }
              }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "api_key": {
        "type": "apiKey",
        "name": "api_key",
        "in": "header"
      }
    }
  }
}